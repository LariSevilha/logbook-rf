  <div class="container">
    <div class="date-section">
      <%= image_tag('calendario.png') %> 
      <%= I18n.l Date.today, format: "%d de %B de %Y" %>
    </div>

    <% @trainings.group_by(&:date).each do |date, trainings| %>
      <h6><%= date.strftime("%d/%m/%Y") %></h6>

      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Exercício</th>
              <th scope="col">Progressão</th>
            </tr>
          </thead>
          <tbody>
            <% trainings.each do |training| %>
              <% training.exercises.each do |exercise| %>
                <tr>
                  <td><%= exercise.name %></td>
                  <td>
                    <table class="inner-table">
                      <% exercise.progressions.each do |progression| %>
                        <tr>
                          <td><%= progression.set %> séries</td>
                          <td><%= progression.rep %> repetições </td>
                          <td><%= progression.weight %> kg</td>
                          <td>
                            <% case progression.level %>
                              <% when "facil" %>
                                <span class="level-dot easy">●</span>
                              <% when "medio" %>
                                <span class="level-dot medium">●</span>
                              <% when "dificil" %>
                                <span class="level-dot hard">●</span>
                            <% end %>
                          </td>
                        </tr>
                      <% end %>
                    </table>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div> 
